<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		  	  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
		  	  
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewCreateUserUserName" android:text="Username :"></TextView><EditText
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minWidth="@dimen/min_width_edit_text" android:maxLength="25" android:text='' android:lines="1" android:layout_gravity="center_horizontal" android:hint="Enter a new user name" android:id="@+id/EditTextCreateUserUserName">
	</EditText>
	<TextView
		android:text="(Up to 25 characters)"
		android:id="@+id/TextViewNewUserName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
	</TextView>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sex :" android:id="@+id/TextViewCreateUserSex" android:layout_marginTop="15sp"></TextView><LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/LinearLayoutCreateUserSex"><RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RadioButtonCreateUserMale" android:text="Male"></RadioButton><RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/RadioButtonCreateUserFemale" android:text="Female" android:layout_marginLeft="30sp"></RadioButton>

</LinearLayout><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TextViewCreateUserDateBirth" android:text="Date of Birth :" android:layout_marginTop="15sp"></TextView><DatePicker android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/DatePickerCreateUserBirth" android:layout_gravity="center_horizontal"></DatePicker><LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/LinearLayoutCreateUserButtons" android:layout_gravity="bottom|center_horizontal" android:layout_weight="1">
<Button android:id="@+id/ButtonCreate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Create" android:layout_gravity="bottom" android:minWidth="@dimen/min_width_button"></Button>
<Button android:id="@+id/ButtonCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:minWidth="@dimen/min_width_button" android:layout_gravity="bottom"></Button>
</LinearLayout>


